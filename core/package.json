{
  "description": "Nuxeo Web Components",
  "keywords": [
    "nuxeo",
    "web-components",
    "polymer"
  ],
  "repository": "nuxeo/nuxeo-elements.git",
  "name": "@nuxeo/nuxeo-elements",
  "version": "3.0.0-SNAPSHOT",
  "author": "Nuxeo",
  "license": "Apache 2.0",
  "scripts": {
    "eslint": "eslint *.js *.html demo/**/*.html test/**/*.html",
    "polylint": "polymer lint",
    "lint": "npm run eslint && npm run polylint",
    "test": "polymer test --npm --simpleOutput --expanded -l chrome",
    "docs": "polymer analyze > analysis.json && polymer serve",
    "coveralls": "cat coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "@polymer/polymer": "^3.0.0",
    "nuxeo": "^3.2.1",
    "@webcomponents/webcomponentsjs": "^2.0.0"
  },
  "devDependencies": {
    "@polymer/iron-component-page": "^4.0.0",
    "@polymer/test-fixture": "^4.0.0",
    "coveralls": "^3.0.2",
    "es6-promise": "^4.0.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "polymer-cli": "^1.8.0",
    "wct-browser-legacy": "^1.0.1",
    "wct-istanbul": "^0.14.3"
  },
  "main": "nuxeo-elements.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
