{
  "plugins": {
    "istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/nuxeo-elements/*.html"
      ],
      "exclude": []
    },
    "local": {
      "browsers": [
        "chrome"
      ],
      "browserOptions": {
        "chrome": [
          "no-sandbox",
          "headless"
        ]
      }
    },
    "sauce": {
      "disabled": true,
      "browsers": [
        {
          "browserName": "chrome",
          "platform": "Windows 10",
          "version": "latest"
        },
        {
          "browserName": "firefox",
          "platform": "Windows 10",
          "version": "latest"
        },
        {
          "browserName": "microsoftedge",
          "platform": "Windows 10",
          "version": "latest"
        },
        {
          "browserName": "safari",
          "platform": "macOS 10.13",
          "version": "latest"
        }
      ]
    }
  }
}
