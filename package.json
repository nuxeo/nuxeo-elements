{
  "description": "Nuxeo Web Components Library",
  "repository": "nuxeo/nuxeo-elements.git",
  "name": "nuxeo-elements",
  "private": true,
  "version": "3.1.0-SNAPSHOT",
  "author": "Nuxeo",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10.23.0"
  },
  "scripts": {
    "postinstall": "check-engine --ignore",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes && lerna bootstrap",
    "nuke": "rm -rf package-lock.json node_modules && npm install && lerna exec \"rm -f package-lock.json\" && lerna clean --yes && lerna bootstrap && lerna exec --stream -- \"test -f package-lock.json || npm install --package-lock-only\"",
    "test": "npm-run-all test:core test:ui test:dataviz",
    "test-ci": "npm run test:core && sleep 10 && npm run test:dataviz && sleep 10 && npm run test:ui",
    "test:core": "karma start --package core --coverage",
    "test:ui": "karma start --package ui --coverage",
    "test:dataviz": "karma start --package dataviz --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "docs": "lerna run docs --parallel",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.{js,html}\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.{js,html}\" --write",
    "lint:polymer": "polymer lint -i {core,dataviz,ui}/**/*.js",
    "win-lint:polymer": "polymer lint -i {core,dataviz,ui}\\**\\*.js",
    "format:polymer": "polymer lint -i ./{core,dataviz,ui}/**/*.js --fix",
    "win-format:polymer": "polymer lint -i .\\{core,dataviz,ui}\\**\\*.js --fix",
    "lint": "npm run lint:polymer && npm run lint:eslint && npm run lint:prettier",
    "win-lint": "npm run win-lint:polymer && npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:polymer && npm run format:prettier && npm run format:eslint",
    "win-format": "npm run win-format:polymer && npm run format:prettier && npm run format:eslint ",
    "storybook": "lerna run analysis --parallel && cd storybook && npm start",
    "bump-version:date-hash": "TIMESTAMP=$(date -u +%Y%m%d.%H%M%S) && lerna exec \"npm --no-git-tag-version version \\$(node -pe \\\"require('./package.json').version + '.$TIMESTAMP-' + require('child_process').execSync('git rev-parse --short HEAD').toString()\\\")\" --ignore @nuxeo/nuxeo-elements-storybook"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^0.3.0",
    "@open-wc/karma-esm": "^2.12.6",
    "@open-wc/prettier-config": "^0.1.0",
    "@polymer/iron-component-page": "^4.0.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "check-engine": "^1.10.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.15.1",
    "eslint-plugin-html": "^5.0.3",
    "husky": "^4.2.3",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sauce-launcher": "^4.3.4",
    "karma-sinon-chai": "^2.0.2",
    "karma-source-map-support": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-static": "^1.0.1",
    "lerna": "^3.13.1",
    "lint-staged": "^10.1.1",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "polymer-cli": "^1.8.0",
    "semver": "^7.3.2",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,html}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@nuxeo/moment": "^2.24.0-nx.0",
    "@nuxeo/paper-typeahead": "^0.6.0-nx.0",
    "@polymer/iron-autogrow-textarea": "^3.0.1",
    "@polymer/iron-collapse": "^3.0.0",
    "@polymer/iron-flex-layout": "^3.0.0",
    "@polymer/iron-form": "^3.0.0",
    "@polymer/iron-form-element-behavior": "^3.0.1",
    "@polymer/iron-icon": "^3.0.0",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/iron-iconset-svg": "^3.0.1",
    "@polymer/iron-image": "^3.0.1",
    "@polymer/iron-input": "^3.0.1",
    "@polymer/iron-list": "^3.0.0",
    "@polymer/iron-meta": "^3.0.1",
    "@polymer/iron-overlay-behavior": "^3.0.2",
    "@polymer/iron-pages": "^3.0.0",
    "@polymer/iron-resizable-behavior": "^3.0.1",
    "@polymer/iron-scroll-threshold": "^3.0.0",
    "@polymer/iron-selector": "^3.0.1",
    "@polymer/iron-validatable-behavior": "^3.0.1",
    "@polymer/marked-element": "^3.0.1",
    "@polymer/neon-animation": "^3.0.1",
    "@polymer/paper-button": "^3.0.0",
    "@polymer/paper-card": "^3.0.0",
    "@polymer/paper-checkbox": "^3.0.0",
    "@polymer/paper-dialog": "^3.0.0",
    "@polymer/paper-dialog-behavior": "^3.0.1",
    "@polymer/paper-dialog-scrollable": "^3.0.0",
    "@polymer/paper-dropdown-menu": "^3.0.0",
    "@polymer/paper-icon-button": "^3.0.0",
    "@polymer/paper-input": "^3.0.0",
    "@polymer/paper-item": "^3.0.0",
    "@polymer/paper-listbox": "^3.0.0",
    "@polymer/paper-menu-button": "^3.0.1",
    "@polymer/paper-progress": "^3.0.0",
    "@polymer/paper-radio-button": "^3.0.0",
    "@polymer/paper-radio-group": "^3.0.0",
    "@polymer/paper-spinner": "^3.0.0",
    "@polymer/paper-styles": "^3.0.1",
    "@polymer/paper-toast": "^3.0.0",
    "@polymer/paper-toggle-button": "^3.0.0",
    "@polymer/paper-tooltip": "^3.0.0",
    "@polymer/polymer": "^3.0.0",
    "@polymer/test-fixture": "^4.0.2",
    "@vaadin/vaadin-date-picker": "^3.0.0",
    "nuxeo": "^3.2.1"
  }
}
